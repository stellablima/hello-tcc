<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.v1tcc">

    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.V1TCC">
        <activity
            android:name=".MenuNecessidadeActivity"
            android:exported="true" />
        <activity
            android:name=".MenuOcorrenciaActivity"
            android:exported="true" />
        <activity
            android:name=".AdicionarOcorrenciaActivity"
            android:exported="true" />
        <activity
            android:name=".AdicionarNecessidadeActivity"
            android:exported="true" />
        <activity
            android:name=".AdicionarInstrucaoActivity"
            android:exported="true" />
        <activity
            android:name=".MenuInstrucoesActivity"
            android:exported="true" />
        <activity
            android:name=".AdicionarVencimentoActivity"
            android:exported="true" />
        <activity
            android:name=".MenuVencimentosActivity"
            android:exported="true" />
        <activity
            android:name=".AlertaActivity"
            android:exported="true" />
        <activity
            android:name=".activities.ManterTarefaActivity"
            android:exported="true" />
        <activity
            android:name=".MenuTarefaActivity"
            android:exported="true" />
        <activity
            android:name=".TarefaActivity"
            android:exported="true" />
        <activity
            android:name=".ManterEstadoActivity"
            android:exported="true" />
        <activity
            android:name=".RelatoriosActivity"
            android:exported="true" />
        <activity
            android:name=".EditarProcedimentoActivity"
            android:exported="true" />
        <activity
            android:name=".activities.AlarmReceiverProcedimentoActivity"
            android:exported="true" />

        <receiver
            android:name=".AlarmReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>

                <!-- ponto de entrada do app             <action android:name="android.intent.action.MAIN" /> -->

                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".ProcedimentosActivity"
            android:exported="true" />
        <activity
            android:name=".MenuProcedimentosActivity"
            android:exported="true" />
        <activity
            android:name=".MenuMainActivity"
            android:exported="true" />
        <activity
            android:name=".activities.ManterProcedimentoActivity"
            android:exported="true" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>