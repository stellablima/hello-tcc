<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.v1tcc">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".application.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.V1TCC">
        <activity
            android:name=".activities.MenuNecessidadeActivity"
            android:exported="true" />
        <activity
            android:name=".activities.MenuOcorrenciaActivity"
            android:exported="true" />
        <activity
            android:name=".activities.ManterOcorrenciaActivity"
            android:exported="true" />
        <activity
            android:name=".activities.ManterNecessidadeActivity"
            android:exported="true" />
        <activity
            android:name=".activities.ManterInstrucaoActivity"
            android:exported="true" />
        <activity
            android:name=".activities.MenuInstrucoesActivity"
            android:exported="true" />
        <activity
            android:name=".activities.ManterVencimentoActivity"
            android:exported="true" />
        <activity
            android:name=".activities.MenuVencimentosActivity"
            android:exported="true" />
        <activity
            android:name=".activities.ManterAlertaActivity"
            android:exported="true" />
        <activity
            android:name=".activities.ManterTarefaActivity"
            android:exported="true" />
        <activity
            android:name=".activities.MenuTarefaActivity"
            android:exported="true" />
        <activity
            android:name=".TarefaActivity"
            android:exported="true" />
        <activity
            android:name=".RelatoriosActivity"
            android:exported="true" />
        <activity
            android:name=".activities.AlarmReceiverProcedimentoActivity"
            android:exported="true" />

        <receiver
            android:name=".AlarmReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>

                <!-- ponto de entrada do app             <action android:name="android.intent.action.MAIN" /> -->

                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>


        <activity
            android:name=".ProcedimentosActivity"
            android:exported="true" />
        <activity
            android:name=".activities.MenuProcedimentosActivity"
            android:exported="true" />
        <activity
            android:name=".activities.MenuMainActivity"
            android:exported="true" />
        <activity
            android:name=".activities.ManterProcedimentoActivity"
            android:exported="true" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>